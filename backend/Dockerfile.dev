# ==============================================================================
# Development container for the Messngr Elixir umbrella
# ==============================================================================
FROM elixir:1.17

# ==============================================================================
# Tooling required for Phoenix asset watchers and database access
# ==============================================================================
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        build-essential \
        curl \
        git \
        inotify-tools \
        postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 18 for Phoenix asset tooling (esbuild/tailwind)
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get update \
    && apt-get install -y --no-install-recommends nodejs \
    && npm install --global npm@9 \
    && rm -rf /var/lib/apt/lists/*

# ==============================================================================
# Project setup
# ==============================================================================
ENV MIX_ENV=dev \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8

WORKDIR /app

# Pre-install Hex and Rebar for mix tooling
RUN mix local.hex --force && mix local.rebar --force

# Copy minimal files to leverage Docker layer caching for deps
COPY mix.exs mix.lock ./
COPY config ./config
COPY apps/msgr/mix.exs ./apps/msgr/mix.exs
COPY apps/msgr_web/mix.exs ./apps/msgr_web/mix.exs

# Fetch Elixir dependencies during build to speed up container start
RUN mix deps.get

# Default command keeps parity with local development (`mix phx.server`)
CMD ["mix", "phx.server"]
